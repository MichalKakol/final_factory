{% extends 'base.html.twig' %}

{% block title %}Person index{% endblock %}

{% block content %}
    <h1>Person index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>First_name</th>
                <th>Preprovision</th>
                <th>Last_name</th>
                <th>Date_of_birth</th>
                <th>Hiring_date</th>
                <th>Salary</th>
                <th>Social_sec_number</th>
                <th>Street</th>
                <th>Place</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for person in people %}
            <tr>
                <td>{{ person.id }}</td>
                <td>{{ person.email }}</td>
                <td>{{ person.roles ? person.roles|json_encode : '' }}</td>
                <td>{{ person.password }}</td>
                <td>{{ person.firstName }}</td>
                <td>{{ person.preprovision }}</td>
                <td>{{ person.lastName }}</td>
                <td>{{ person.dateOfBirth ? person.dateOfBirth|date('Y-m-d') : '' }}</td>
                <td>{{ person.hiringDate ? person.hiringDate|date('Y-m-d') : '' }}</td>
                <td>{{ person.salary }}</td>
                <td>{{ person.socialSecNumber }}</td>
                <td>{{ person.street }}</td>
                <td>{{ person.place }}</td>
                <td>
                    <a href="{{ path('app_person_show', {'id': person.id}) }}">show</a>
                    <a href="{{ path('app_person_edit', {'id': person.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="14">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_person_new') }}">Create new</a>
{% endblock %}

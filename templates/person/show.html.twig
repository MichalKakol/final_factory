{% extends 'user/admin.html.twig' %}

{% block title %}Person{% endblock %}

{% block content %}
    <h1>Person</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ person.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ person.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ person.roles ? person.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ person.password }}</td>
            </tr>
            <tr>
                <th>First_name</th>
                <td>{{ person.firstName }}</td>
            </tr>
            <tr>
                <th>Preprovision</th>
                <td>{{ person.preprovision }}</td>
            </tr>
            <tr>
                <th>Last_name</th>
                <td>{{ person.lastName }}</td>
            </tr>
            <tr>
                <th>Date_of_birth</th>
                <td>{{ person.dateOfBirth ? person.dateOfBirth|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Hiring_date</th>
                <td>{{ person.hiringDate ? person.hiringDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Salary</th>
                <td>{{ person.salary }}</td>
            </tr>
            <tr>
                <th>Social_sec_number</th>
                <td>{{ person.socialSecNumber }}</td>
            </tr>
            <tr>
                <th>Street</th>
                <td>{{ person.street }}</td>
            </tr>
            <tr>
                <th>Place</th>
                <td>{{ person.place }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('app_person_edit', {'id': person.id}) }}">edit</a>

    {{ include('person/_delete_form.html.twig') }}
{% endblock %}

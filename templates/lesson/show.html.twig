{% extends 'user/instructor.html.twig' %}

{% block title %}Lesson{% endblock %}

{% block content %}
    <h1>Lesson</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ lesson.id }}</td>
            </tr>
            <tr>
                <th>Times</th>
                <td>{{ lesson.times ? lesson.times|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Dates</th>
                <td>{{ lesson.dates ? lesson.dates|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ lesson.location }}</td>
            </tr>
            <tr>
                <th>Max_people</th>
                <td>{{ lesson.maxPeople }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_lesson_index') }}">back to list</a>

    <a href="{{ path('app_lesson_edit', {'id': lesson.id}) }}">edit</a>

    {{ include('lesson/_delete_form.html.twig') }}
{% endblock %}

{% extends 'user/admin.html.twig' %}

{% block title %}Training index{% endblock %}

{% block content %}
    <h1>Trainingen Overview</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Duration</th>
                <th>Extra Cost</th>
                <th>action</th>
            </tr>
        </thead>
        <tbody>
        {% for training in trainings %}
            <tr>
                <td>{{ training.id }}</td>
                <td>{{ training.description }}</td>
                <td>{{ training.duration }}</td>
                <td>{{ training.extraCost }}</td>
                <td>
                    <a class="btn" href="{{ path('app_training_edit', {'id': training.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('app_training_new') }}">Add</a>
{% endblock %}
